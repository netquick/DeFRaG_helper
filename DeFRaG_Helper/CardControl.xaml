<UserControl x:Class="DeFRaG_Helper.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Border Background="#444" CornerRadius="5">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="Card Title" FontWeight="Bold" FontSize="16" FontFamily="Segoe UI" />
            <TextBlock Grid.Row="1" Text="Mapname" FontSize="10" FontFamily="Segoe UI" />    
            <!-- Add more elements as needed -->
        </Grid>
    </Border>
</UserControl>
